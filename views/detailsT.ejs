        <input type="hidden" id="clamon" value="<%=monument.cla %>">
        <input type="hidden" id="clomon" value="<%=monument.clo %>">
        <script type="text/javascript">

                function initMap() {
                    var lat= parseFloat($('#clamon').val()) ;
                    var lng= parseFloat($('#clomon').val()) 
                    var uluru = {lat: lat , lng: lng};
                    var map = new google.maps.Map(document.getElementById('map'), {
                      zoom: 8,
                      center: uluru
                    });
                    var marker = new google.maps.Marker({
                      position: uluru,
                      map: map
                    });
                  }
            </script>
          <script type="text/javascript">
            
            var socket = io();
            
                $('#send').click(function(){
                    
                    var comment = $('#com').val();
                    var postId = $('#monument').val();
                    var user = $('#user').val();
                   
                    var name = $('#name').val();
                    if(comment != ''){
                        var data = {'id_user': user,'id_monument': postId,'message':comment,'name':name,'date':new Date()};
                    $('.comcom').append("<h4>"+name+"</h4>"+"<p>"+comment+"</p>");
                    $('#com').val('');
                    }
                    
                socket.emit('comment',data);
             
             
                });
             
                socket.on('comment',function(data){
                    var postId = "<%= monument._id %>";
                    if(postId==data.id_monument){
                        $('.comcom').append("<p>"+data.comment+"</p>");
                        
                    }
                    });
                
             
            </script>  
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBwarlVfqlWKfonKl9T0wr9VGC0ynvbdiU&amp;callback=initMap" async defer></script>

