    <body id="home" class="wide">
        <!-- WRAPPER -->
        <main class="wrapper"> 
            <!-- CONTENT AREA -->
            <article class="home-three">
                <!-- Top Header-1 Start -->
              
                <% include menu %>

                <!--Breadcrumb Section Start-->
                <section class="breadcrumb-bg bg-4 white-color">   
                    <div class="site-breadcumb ">  
                        <div class="container ">     
                            <div class="title-wrap-2">
                                <h2 class="section-title"> Détails Monument </h2>
                            </div>
                        </div> 
                    </div>
                    <hr class="divider-1">
                    <div class="container ">    
                        <ol class="breadcrumb breadcrumb-menubar">
                            <li> <a href="/"> Accueil </a>  Détails monument  </li>
                        </ol>
                    </div>
                </section>
                <!--Breadcrumb Section End-->


                <!-- Listing Slider Starts-->
                <section class="sec-space-top pb-50 light-bg listing-slider">
                    <div class="container"> 
                        <div class="row"> 
                            <div class="col-md-8">
                                <div class="promotion-slider sync1 owl-carousel">
                                      <% images.forEach(function(img) {%>
                                                <% img.forEach(function(ima) {%>
                                                
                                                   <div class="item">
                                                        <% if (user){ %>
                                                        <% if(user.grade=="1") { %>
                                                            
                                                            <a href="/supprimer/<%=ima.lien %>" ><button class="btn btn-danger"><i class="fa fa-close"></i>  Supprimer cette photo<div class="ripple-container"></div></button></a>  
                                                          <%   } %>
                                                          <%   } %>
                                                   
                                                        <img alt="" src="/image/<%= ima.lien %>" />
                                                        
                                                        
                                                     

                                                    </div>   

                                                    <%   }) %>
                                          <%   }) %>
                                </div>
                                <div class="navigation"> 
                                    <div class="owl-carousel home-slide-thumb sync2">
                                            <% images.forEach(function(img) {%>
                                                <% img.forEach(function(ima) {%>
                                                
                                                   <div class="item"> 
                                                        <img alt="" src="/image/<%= ima.lien %>" />
                                                    </div>   

                                                    <%   }) %>
                                          <%   }) %>
                                    </div>
                                </div>  

                                <div class="tab-holder pt-50">
                                    <!-- Nav tabs -->
                                    <ul class="list-inline" >
                                        
                                        <li class="active"><a href="#description" data-toggle="tab">Description</a></li>
                                        <li><a href="#video" data-toggle="tab">Vidéo</a></li>
                                        <li><a href="#comment" data-toggle="tab">Commentaires</a></li>
                                        
                                    </ul>
                                    <!-- Tab panes -->
                                    <div class="tab-content">
                                       
                                        <div class="tab-pane active" id="description">
                                            <h3>Description du monument:</h3>
                                           
                                            <div class="blog-info">
                                                    <blockquote>
                                                        <span class="quote-icon"> <span class="fa fa-quote-left  theme-color"></span> </span>
                                                        <p>
                                                                <%= monument.description %>                                            </p>
                                                        
                                                    </blockquote>
                                                </div>
                                        </div>
                                        <div class="tab-pane" id="video">
                                            <h2>Vidéo monument:</h2>
                                            <p>
                                               Voici une vidéo pour avoir un aperçu du monument: </p>
                                               <div class="widget-wrap">
                                   
                                                    <div class="video-link">
                                                            <a class="popup-youtube btn-play fa fa-caret-right theme-color-bg" href="<%= monument.video %>"> </a>
                                                            <h2 class="title-2 black-color pt-30">Ouvrir la vidéo</h2>
                                                        </div>
                                                   
                                                </div>
                                           
                                        </div>
                                        <div class="tab-pane" id="comment">
                                            <div class="comment-wrap"> 
                                                <h3 class="title-2 pb-10 fw-600"> Les commentaires: </h3>
                                                <div class="comments">
                                                    <% 
                                                    if (typeof comment != 'undefined' && comment != null) {
                                                            comment.forEach( function ( commentData ){
                                                                    %>
                                                   
                                                    <div class="comments-body">
                                                        
                                                        <div class="comment-info">
                                                            <h2 class="title-3"><%= commentData.name %> </h2><small class="gray-2 fsz-12"> <%= commentData.date %> </small>
                                                                         <div class="comcomcom">
                                                          
                                                                      <p><%= commentData.message %> </p> 
                                                                            
                                                                          </div>
                                                                          
                                                        </div>
                                                    
                                                    </div>
                                                    <% });
                                                } %>

                                                  <div class="comcom"></div>
                                                </div>
                                                
                                                
                                            </div>
                                            <% if (user){ %>
                                            <div class="reply-wrap pb-10">
                                                
                                              
                                                    <div class="row">
                                                       
                                                        <div class="form-group  col-md-12">
                                                            <textarea data-original-title="Message is required" class="form-control message input-message"
                                                             rows="3" cols="10" placeholder="Votre commentaire..." name="cf_message"
                                                              id="com" data-toggle="tooltip" data-placement="top" title=""></textarea>
                                                              <input type="hidden" id="monument" value="<%= monument._id %>">
                                                              <input type="hidden" id="user" value="<%= user._id %>">
                                                         
                                                             

                                                               
                                                                    <input type="hidden" id="name" value="<%= user.name %>">

                                                        </div> 
                                                        <div class="form-group col-md-12">                                               
                                                          
                                                            <input  type="submit" id="send" value="Commenter" class="theme-btn">                                             
                                                        </div>
                                                    </div>
                                                
                                            </div>
                                            <% } %>
                                        </div>
                                       
                                       
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 sx-mt-50">
                                <div class="info mb-30">
                                    <div class="title-wrap">
                                        <h4 class="section-title fw-600 no-margin">Localisation:</h4>
                                      
                                            <div class="overview mb-30">
                                                    <div class="info">
                                                
                                                        <ul class="list-unstyled">
                                                            <li> <i class="fa fa-map-marker theme-color-bg"></i> <span><%= monument.nom%> , <%= monument.ville %></span> </li>
                                                            
                                                        </ul>
                                                          
                                                    </div>
                                             </div>
                                             <div class="widget-map mb-30">
                                                    <div class="contact-map">  <div id="map"></div> </div>
                                                </div>
                                    </div>
                                    
                                </div>
                               
                                
                                
                            </div>
                        </div>
                    </div>
                </section>
                <!-- / Listing Slider Ends -->      

                <!-- Patners Start -->
                
                <!-- / Patners Ends -->  


            </article>
            <!-- / CONTENT AREA -->

